			<r:fragment r:value="&lt;fo:table-row&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;fo:table-cell width='35%'&gt;&lt;fo:block&gt;Сортировка:&lt;/fo:block&gt;&lt;/fo:table-cell&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;fo:table-cell&gt;&lt;fo:block&gt;{#SortType}&lt;/fo:block&gt;&lt;/fo:table-cell&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;/fo:table-row&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<!-- Порядок сортировки -->
			<r:fragment r:value="&lt;fo:table-row&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;fo:table-cell width='35%'&gt;&lt;fo:block&gt;Порядок сортировки:&lt;/fo:block&gt;&lt;/fo:table-cell&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;fo:table-cell&gt;&lt;fo:block&gt;{#SortOrder}&lt;/fo:block&gt;&lt;/fo:table-cell&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;/fo:table-row&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<!-- Единицы измерения времени -->
			<r:fragment r:value="&lt;fo:table-row&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;fo:table-cell width='35%'&gt;&lt;fo:block&gt;Единицы измерения времени:&lt;/fo:block&gt;&lt;/fo:table-cell&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;fo:table-cell&gt;&lt;fo:block&gt;{#TimeMeasureUnits}&lt;/fo:block&gt;&lt;/fo:table-cell&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<r:fragment r:value="&lt;/fo:table-row&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
			<!-- Закрываем таблицу -->
			<r:fragment r:value="&lt;/fo:table-body&gt;&lt;/fo:table&gt;" r:encoding="xml" r:hide-if="(int){@InsertRestrictions}==0" />
		</r:header-layout>
		
		<!-- Основная таблица -->
		<r:table-layout
			r:n="Main"
			r:data-source-name="Main"
			r:use-data-sources="Main"
			r:assembly="Croc.IncidentTracker.ReportService.Layouts.dll"
			r:class="Croc.IncidentTracker.ReportService.Layouts.CustomTotalTableLayout"

		>
			<r:var r:n="Folder" r:vt="string">
				<r:macros>{#Folder}</r:macros>
			</r:var>
			<r:var r:n="IncidentHref" r:vt="string">
				<r:macros>System.Convert.IsDBNull({#IncidentID}) ? "#" : "vbscript:ShowContextForIncident(\"" + {#IncidentID} + "\", 0, True)"</r:macros>
			</r:var>
			<r:var r:n="NoIncident" r:vt="string">
				<r:macros>System.Convert.IsDBNull({#IncidentID}) ? "1" : "0"</r:macros>
			</r:var>

			<!--r:col r:t="№ п/п" r:counter-start="1" r:counter-increment="1" r:rowspan-by="Folder;Incident"/--> 
			<r:col
				r:t="Активность"
				r:data="{#Folder}"
				r:rowspan-by="Folder"
				r:aggregation-colspan="11"
				r:aggregation-string-subtitle="{%Folder}"
				r:aggregation-string-subtotals="Итого по подпроекту:"
				r:aggregation-string="Общие затраты на активность:"
				r:hide-if="HideGroupColumns"
			/>
			<r:col r:encoding="xml" r:t="Причина списания/№, наименование инцидента" r:data="{#Incident}" r:rowspan-by="Folder;Incident" r:align="ALIGN_LEFT">
				<r:formatters>
					<r:href-evaluator r:href="vbscript:ShowContextForIncident(&quot;{#IncidentID}&quot;, 0, True)" r:if-href-is-null="{%NoIncident}" r:target="_self"/>
				</r:formatters>
			</r:col>
			<r:col r:encoding="xml" r:t="Описание" r:data="{#Description}" r:rowspan-by="Folder;Incident" r:align="ALIGN_LEFT" r:hide-if-not="ShowColumnDescription" >
				<r:formatters>
					<it:bigtext-evaluator/>
				</r:formatters>
			</r:col>
			<r:col r:encoding="xml" r:t="Решение" r:data="{#Solution}" r:rowspan-by="Folder;Incident" r:align="ALIGN_LEFT" r:hide-if-not="ShowColumnSolution" >
				<r:formatters>
					<it:bigtext-evaluator/>
				</r:formatters>
			</r:col>
			<r:col r:t="Состояние" r:data="{#State}" r:rowspan-by="Folder;Incident" r:hide-if-not="ShowColumnState" />
			<r:col r:t="Приоритет" r:data="{#Priority}" r:rowspan-by="Folder;Incident" r:hide-if-not="ShowColumnPriority" />
			<r:col r:t="Даты" r:hide-if-not="ShowColumnsDates">
				<r:col r:t="Крайнего срока" r:data="{#DeadLine}" r:rowspan-by="Folder;Incident" r:hide-if-not="ShowColumnDeadLine">
					<r:formatters>
						<r:date-time-evaluator r:format="dd.MM.yyyy" />
					</r:formatters>
				</r:col>
				<r:col r:t="Регистрации" r:data="{#InputDate}" r:rowspan-by="Folder;Incident" r:hide-if-not="ShowColumnInputDate">
					<r:formatters>
						<r:date-time-evaluator r:format="dd.MM.yyyy" />
					</r:formatters>
				</r:col>
				<r:col r:t="Последней смены состояния" r:data="{#LastChange}" r:rowspan-by="Folder;Incident" r:hide-if-not="ShowColumnLastChange">
					<r:formatters>
						<r:date-time-evaluator r:format="dd.MM.yyyy" />
					</r:formatters>
				</r:col>
				<r:col r:t="Последней затраты времени" r:data="{#LastSpent}" r:rowspan-by="Folder;Incident" r:hide-if-not="ShowColumnLastSpent">
					<r:formatters>
						<r:date-time-evaluator r:format="dd.MM.yyyy" />
					</r:formatters>
				</r:col>
			</r:col>
			<r:col r:t="Задействованы" r:hide-if-not="ShowColumnsActors">
				<r:col r:t="Роль" r:data="{#Role}" r:hide-if-not="ShowColumnRole" />
				<r:col r:t="Сотрудник" r:data="{#Employee}" r:hide-if-not="ShowColumnEmployee">
					<r:formatters>
						<r:href-evaluator r:href="vbscript:ShowContextForEmployeeEx(&quot;{#EmployeeID}&quot;, &quot;{#EmployeeEMail}&quot;, &quot;{#IncidentID}&quot;, &quot;{#FolderID}&quot;, &quot;{@IntervalBegin}&quot;, &quot;{@IntervalEnd}&quot;)" r:target="_self"/>
					</r:formatters>
				</r:col>
			</r:col>
			<r:col r:t="Затраты времени" r:hide-if-not="ShowColumnsTimes">
				<r:col r:t="Запланировано" r:data="{#PlannedTime}" r:aggregation-function="sum" r:hide-if-not="ShowColumnPlannedTime">
					<r:formatters>
						<it:duration-evaluator it:workday-duration="{#WorkdayDuration}"	it:format="{@TimeMeasureUnits}"	/>
					</r:formatters>
				</r:col>	
				<r:col r:t="Общие трудозатраты" r:data="{#SpentTime}" r:aggregation-function="sum" r:hide-if-not="ShowColumnSpentTime">
					<r:formatters>
						<it:duration-evaluator it:workday-duration="{#WorkdayDuration}"	it:format="{@TimeMeasureUnits}"	/>
					</r:formatters>
				</r:col>	
				<r:col r:t="Осталось" r:data="{#LeftTime}" r:aggregation-function="sum" r:hide-if-not="ShowColumnLeftTime">
					<r:formatters>
						<it:duration-evaluator it:workday-duration="{#WorkdayDuration}"	it:format="{@TimeMeasureUnits}"	/>
					</r:formatters>
				</r:col>	
			</r:col>

			<r:grouping>
				<r:group-by r:n="Folder" r:upper-bound-presentation="sub-title" r:bound-presentation="sub-total" />
			</r:grouping>
		</r:table-layout>
	</r:layouts>
</r:report>
